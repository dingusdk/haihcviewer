{
  "name": "ihcviewer",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "ha",
  "workspaceFolder": "/workspace",
  "postCreateCommand": "ln -s /workspace/custom_components/ /workspace/.config/",
  // Features to add to the dev container. More info: https://containers.dev/features.
  // "features": {},
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [
    5678,
    8123
  ],
  //  "appPort": [],
  // installs all requirements in requirements.txt and the components manifests.json
  "updateContentCommand": {
    "requirements": "pip3 install --user homeassistant",
    "component_requirements": "pip3 install --user $(cat custom_components/ihcviewer/manifest.json | jq -r '.requirements|join(\" \")')"
  },
  // Configure tool-specific properties.
  // "customizations": {},
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root",
  "customizations": {
    "vscode": {
      "settings": {
        "files.eol": "\n",
        "editor.tabSize": 2,
        "editor.formatOnPaste": false,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "files.trimTrailingWhitespace": true,
        "yaml.customTags": [
          "!secret scalar"
        ]
      },
      "extensions": [
        "ms-python.python",
        "github.vscode-pull-request-github",
        "ryanluker.vscode-coverage-gutters",
        "ms-python.vscode-pylance"
      ]
    }
  }
}